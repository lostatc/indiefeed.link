root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.html]
indent_size = 2

[*.xsl]
indent_size = 2

[*.md]
max_line_length = 80
